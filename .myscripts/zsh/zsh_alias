# Alias for my zsh
alias gv='gvim'
alias em='emacsclient'
alias ks='ls'
alias nemo='nemo --no-desktop'
alias upd='sudo apt-get update'
alias inst='sudo apt-get install'
alias repo='sudo add-apt-repository'
alias pac='sudo pacman -S'
alias rem='sudo pacman -R'
alias emerge='sudo emerge --ask'
alias webstorm='_JAVA_AWT_WM_NONREPARENTING=1 webstorm'

alias proc='ps -e | grep'
alias lanping='ping -c 3 webmail.iitk.ac.in'
alias wanping='ping -c 3 www.google.com'
alias wifi='sudo wifi-menu'
alias fgrep='grep -r -i'
alias pjson='node -e "console.log(JSON.stringify(JSON.parse(require('fs').readFileSync(process.argv[1])), null, 4));" ' # Prettify input JSON file
alias prettyjson='python -m json.tool'

# Commonly used dirs
alias core='cd $HOME/ixchel/core/src/main/scala/org.gmantra.ixchel/models'
