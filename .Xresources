! urxvt
URxvt*buffered: true
URxvt*cursorBlink: true
URxvt*underlineColor: yellow
URxvt.font: xft:monofur for Powerline:size=14
URxvt*depth: 32
URxvt*borderless: 1
URxvt*scrollBar: false
Urxvt*secondaryScroll:  true    # Enable Shift-PageUp/Down in screen
URxvt*saveLines: 10000
URxvt*termName: rxvt-unicode

! To implement clickable URLs
URxvt.perl-ext-common:      default,matcher,vtwheel,clipboard,url-select,keyboard-select
URxvt.url-launcher:         /usr/bin/google-chrome-stable
URxvt.url-select.launcher:  /usr/bin/google-chrome-stable
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5

! disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C:   perl:clipboard:copy

URxvt.keysym.Mod4-c: perl:clipboard:copy
URxvt.keysym.Mod4-v: perl:clipboard:paste

xscreensaver.newLoginCommand: dm-tool switch-to-greeter

urxvt*foreground: white
urxvt*background: black

*color0:  #2E3436
*color1:  #a40000
*color2:  #4E9A06
