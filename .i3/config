#exec --no-startup-id synapse
#exec --no-startup-id touchegg


# Allows pressing the shortcut for the present workspace to go back to the previous
workspace_auto_back_and_forth yes

# Shortcuts
# Browser
bindsym $mod+F1 exec google-chrome-stable
bindsym $mod+Shift+z [class="Firefox"] focus

# Terminal
bindsym Ctrl+$oth+T exec gnome-terminal
